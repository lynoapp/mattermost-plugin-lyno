{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "react",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "*.test.tsx",
    "node_modules",
    "!node_modules/@types",
    "webpack.*.ts"
  ]
}
